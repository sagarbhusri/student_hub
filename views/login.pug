doctype html
html
  head
    meta(charset='UTF-8')
    |     
    title Simple Flat Form with Spinning Loader
    |     
    script(src='http://s.codepen.io/assets/libs/modernizr.js', type='text/javascript')
    |     
    |     
    |     
    link(rel='stylesheet prefetch', href='http://fonts.googleapis.com/css?family=Nunito:400,300,700')
    |         
    link(rel='stylesheet', href='/resources/css/login_style.css')
  |   
  body
    .container
      .form-container.flip
        form.login-form(method="post")
          h3.title Hello.
          |       
          #username.form-group
            input#email.form-input(name="userid",tooltip-class='username-tooltip', placeholder='Username', required='true',value="b130010012")
            |         
            span#username-tool.tooltip.username-tooltip What&apos;s your username?
          |       
          #password.form-group
            input.form-input(name="password",type='password', tooltip-class='password-tooltip', placeholder='Password',value="password")
            |         
            span.tooltip.password-tooltip What&apos;s your password?
          |       
          .form-group
            button.login-button(onclick='clickListener();') Login
            |         
            input.remember-checkbox(type='checkbox')
            |         
            p.remember-p Remember me
        |     
        .loading
          .loading-spinner-large(style='display: none;')
          |       
          .loading-spinner-small(style='display: none;')
    |     
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js')
    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
    |         
    script(src='/resources/js/login.js')